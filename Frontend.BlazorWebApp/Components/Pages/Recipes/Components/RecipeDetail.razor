@using Backend.Shared.Models.Recipes

<div class="card p-4 w-100 h-100">
	<h4>@Recipe.Title</h4>
	<p>@Recipe.DetailedRecipe</p>
	<button class="btn btn-secondary" @onclick="OnBack">Vissza az ajánlásokhoz</button>
</div>

@code {
	[Parameter] public RecipeSuggestionDto Recipe { get; set; } = default!;
	[Parameter] public EventCallback OnBack { get; set; }
}
